- if session[:user_id].present?

  %h1 Users

  %p= link_to 'Add a New User', new_user_url

  %table
    %thead
      %tr
        %th Name
        %th Name
        %th
        %th
        %th

    %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        - if user.email == 'ianreither@gmail.com'
          %td= link_to 'Show', user_url(user)
          %td=link_to 'Edit', edit_user_url(user)
          %td= link_to 'Destroy', user_url(user), method: 'delete', data: { confirm: "Do you really want to delete this user?" }



