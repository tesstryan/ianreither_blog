
<div class="col-md-4">
<h1>Sign In</h1>

<%= form_tag(sessions_url, method: 'post') do %>
<form role="form">
  <div class="form-group">
    <%= label_tag :email %><br />
    <%= email_field_tag :email, nil, :placeholder => "email@example.com", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, :placeholder => "Password", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In!", :class => "btn btn-default" %>
  </div>
<% end %>
</form>
</div>