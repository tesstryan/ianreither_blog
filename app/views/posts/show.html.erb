<div class="container">

  <div class="col-md-1">
  </div>

  <div class="col-xs-12 col-md-7 blog_posts">
    <article>
        <h2><%= @post.header %>  </h2>
        <% sub_header = @post.sub_header %>
        <% if sub_header.present? %>
        <h3><%= @post.sub_header %></h3>
        <% end %>
        <h6 class="date"><%= @post.date %></h6>
        <p><%= simple_format @post.content %></p>
    </article>
  </div>

</div>
