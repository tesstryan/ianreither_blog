<h1>Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Edit', edit_book_url(book) %></td>
      <td><%= link_to 'Delete', book_url(book), method: 'delete', data: { confirm: "Do you really want to delete this book?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="col-md-4">

<h1>Add a New Book</h1>

<%= form_tag(books_url, method: 'post') do %>
  <div class="form-group">
    <%= label_tag :title %><br />
    <%= text_field_tag :title, nil, :placeholder => "Title", :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= label_tag :author %><br />
    <%= text_field_tag :author, nil, :placeholder => "Author", :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= label_tag :image %><br />
    <%= text_field_tag :image, nil, :placeholder => "Book Image", :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= label_tag :link %><br />
    <%= text_field_tag :link, nil, :placeholder => "Link to book", :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= submit_tag "Create Book", :class => "btn btn-default" %>
  </div>
<% end %>

</div>